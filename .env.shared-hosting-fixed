# Environment Configuration for Shared Hosting
# Copy this to .env and modify values according to your hosting

APP_NAME="Desa Banyukambang"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://your-domain.com

# Database Configuration (sesuai hosting panel)
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=your_database_name
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password

# ðŸ”§ SHARED HOSTING STORAGE FIX - TANPA SSH/COMMAND
SHARED_HOSTING_MODE=true

# Cache & Session (file-based untuk shared hosting)
CACHE_STORE=file
SESSION_DRIVER=file
QUEUE_CONNECTION=sync

# Filesystem (tetap gunakan public, akan auto override oleh AppServiceProvider)
FILESYSTEM_DISK=public

# Mail Configuration (sesuai hosting)
MAIL_MAILER=smtp
MAIL_HOST=mail.your-domain.com
MAIL_PORT=587
MAIL_ENCRYPTION=tls
MAIL_USERNAME=noreply@your-domain.com
MAIL_PASSWORD=your_email_password
MAIL_FROM_ADDRESS="noreply@your-domain.com"
MAIL_FROM_NAME="${APP_NAME}"

# Disable cloud storage untuk shared hosting
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
MINIO_ACCESS_KEY=
MINIO_SECRET_KEY=

# Performance Optimization untuk shared hosting
CACHE_PREFIX=village_prod

# Security untuk production
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=strict